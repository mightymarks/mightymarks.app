	"main": "index.js",
	"scripts": {
		"build": "yarn build:web && yarn build:ext",
		"build:ext": "yarn clean:ext && webpack --env.prod",
		"build:web": "yarn clean:web && yarn gatsby build",
		"clean": "yarn clean:ext && yarn clean:web && yarn clean:func",
		"clean:ext": "rm -rf dist",
		"clean:web": "rm -rf public",
		"dev:ext": "webpack",
		"dev:web": "yarn clean:web && yarn gatsby develop",
		"emulate:func": "firebase emulators:start --only functions",
		"serve:web": "yarn build:web && gatsby serve",
		"test:regression": "percy snapshot public -i report.html",
		"test:unit": "echo 'should add some tests'",
		"validate": "yarn tsc --noEmit && yarn eslint ."
	},
