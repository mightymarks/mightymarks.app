	"license": "SEE LICENSE IN LICENSE.txt",
	"private": true,
	"scripts": {
		"test:unit": "echo 'should add some tests'",
		"test:regression": "percy snapshot public -i report.html",
		"lint": "eslint .",
		"build": "yarn build:site && yarn build:ext",
		"build:site": "yarn clean:site && gatsby build",
		"build:ext": "yarn clean:ext && webpack",
		"serve": "yarn clean:site && yarn build && gatsby serve",
		"dev:site": "yarn clean:site && gatsby develop",
		"dev:ext": "yarn clean:ext && NODE_ENV=development webpack-dev-server",
		"clean": "yarn clean:ext && yarn clean:site",
		"clean:ext": "rm -rf dist",
		"clean:site": "rm -rf ./public"
	},
